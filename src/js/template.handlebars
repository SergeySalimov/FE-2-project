{{#each this}}
  <div class="col-sm-6 col-md-4 col-xl-3 my-2" data-id="{{uniqueId}}">
    <div class="card">
      <!--              <i class="icon-heart like"></i>-->
      <img src="{{img}}" class="card-img-top" alt="{{header}}">
      <div class="card-body">
        <h5 class="card-title">{{header}}</h5>
      </div>
      <div class="card-footer">
        <button type="button"
                class="btn btn-sm btn-outline-success basket-click"
                id="product-btn-{{uniqueId}}"
                data-toggle="tooltip"
                data-placement="top"
                title="Необходима регистрация">
          В корзину
          <i class="icon-shopping-basket"></i>
        </button>
      </div>
    </div>
  </div>
{{/each}}
